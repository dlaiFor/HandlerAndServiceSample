<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="bind"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/bind"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <Button
            android:text="invoke Service fun"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/invoke"
            app:layout_constraintBottom_toBottomOf="@+id/button4"/>
    <TextView
            android:id="@+id/number"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="unBind"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/unbind"
            app:layout_constraintBottom_toBottomOf="@+id/bind" app:layout_constraintEnd_toStartOf="@+id/invoke"
            android:layout_marginEnd="17dp" android:layout_marginRight="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>